<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">

    <title>Dnguyen-SPA :: @ViewBag.Title</title>
    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/underscore")
    @Scripts.Render("~/bundles/backbone")
    @Scripts.Render("~/bundles/clientSideMVC")
    @Scripts.Render("~/bundles/site.js")

    @RenderSection("scripts", required: false)

</head>

<body>
    <div class="container">
        @*-- Header Section --*@
        <div class="header">
            <ul class="nav nav-pills pull-left">
                <li><a href="#"><span class="glyphicon glyphicon-align-justify"></span> SECTIONS</a></li>
                <li><a href="#"><span class="glyphicon glyphicon-search"></span> SEARCH</a></li>
            </ul>
            <ul class="nav nav-pills pull-right">
                <li><a href="#">Duy Nguyen</a></li>
            </ul>
            <h3 class="text-muted">&nbsp;</h3>
        </div>

        @*-- Center Header --*@
        <div class="centerHeader">
            <h2><a href="~/">CAPTECH.IO NEWS</a></h2>
            <p class="~lead">@DateTime.Today.ToString("dddd, MMMM dd, yyyy")</p>
        </div>

        @*-- Category Menus --*@
        @*<div class="container">
            <ul class="nav nav-pills nav-justified">
                <li><a href="#">World</a></li>
                <li><a href="#">Business</a></li>
                <li><a href="#">Opinion</a></li>
                <li><a href="#">Sports</a></li>
                <li><a href="#">Fashion & Style</a></li>
                <li><a href="#">Video</a></li>
            </ul>
        </div>*@

        @*-- Here we build dynamically Category Menus.  This is Consumed by CategoryView.js --*@
        <div id="categoryMenu-container"></div>

        @*-- Banner --*@
        <div class="well expandableDiv" id="banner-container"></div>

        @*-- Content Page --*@
        @RenderBody()

        <div class="footer">
            <p>&copy; Captech HTML5 Challenge</p>
        </div>

    </div> <!-- /container -->
    
    @*We move Underscore template files into a separate partial file for organizational purposes*@
    @Html.Partial("categoryMenu-template")
    @Html.Partial("content-template")
    @Html.Partial("home-template")
    @Html.Partial("banner-template")

</body>
</html>
